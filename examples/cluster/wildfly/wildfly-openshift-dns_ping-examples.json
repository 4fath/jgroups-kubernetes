{
    "kind": "Config",
    "id": "wildfly-config",
    "apiVersion": "v1beta1",
    "name": "JBoss WildFly OpenShift Config",
    "description": "Creates a JBoss WildFly OpenShift Cluster",
    "items": [
        {
            "kind": "Service",
            "id": "wildfly-http-service",
            "apiVersion": "v1beta1",
            "port": 80,
            "containerPort": 8080,
            "selector": {
                "name": "wildflyPod"
            }
        },
        {
            "kind": "Service",
            "id": "wildfly-https-service",
            "apiVersion": "v1beta1",
            "port": 443,
            "containerPort": 8443,
            "selector": {
                "name": "wildflyPod"
            }
        },
        {
            "kind": "Service",
            "id": "ping",
            "apiVersion": "v1beta1",
            "port": 8888,
            "portalIP": "None",
            "containerPort": 8888,
            "selector": {
                "name": "wildflyPod"
            }
        },
        {
            "kind": "ReplicationController",
            "id": "wildfly-controller",
            "apiVersion": "v1beta1",
            "labels": {
                "name": "wildfly-controller"
            },
            "desiredState": {
                "replicas": 2,
                "replicaSelector": {
                    "name": "wildflyPod"
                },
                "podTemplate": {
                    "desiredState": {
                        "manifest": {
                            "id": "wildflyPod",
                            "version": "v1beta1",
                            "containers": [
                                {
                                    "image": "10.245.2.2:5000/dward/wildfly-openshift-examples:v1",
                                    "imagePullPolicy": "PullIfNotPresent",
                                    "name": "wildfly-container",
                                    "env": [
                                        {
                                            "name": "OPENSHIFT_PING_SERVICE",
                                            "value": "ping"
                                        },
                                        {
                                            "name": "OPENSHIFT_PING_NAMESPACE",
                                            "value": "default"
                                        },
                                        {
                                            "name": "OPENSHIFT_PING_DOMAIN",
                                            "value": "local"
                                        }
                                    ],
                                    "ports": [
                                        {
                                            "hostPort": 9080,
                                            "containerPort": 8080
                                        },
                                        {
                                            "hostPort": 9443,
                                            "containerPort": 8443
                                        },
                                        {
                                            "hostPort": 9888,
                                            "name": "ping",
                                            "containerPort": 8888
                                        }
                                    ]
                                }
                            ]
                        }
                    },
                    "labels": {
                        "name": "wildflyPod"
                    }
                }
            }
        }
    ]
}
