{
    "kind": "List",
    "apiVersion": "v1beta3",
    "metadata": {},
    "items": [
        {
            "apiVersion": "v1",
            "kind": "Service",
            "metadata": {
                "annotations": {
                    "description": "The web server's http port."
                },
                "labels": {
                    "application": "wildfly-app"
                },
                "name": "wildfly-app-http-service"
            },
            "spec": {
                "ports": [
                    {
                        "port": 8080,
                        "targetPort": 8080
                    }
                ],
                "selector": {
                    "deploymentConfig": "wildfly-app"
                }
            }
        },
        {
            "apiVersion": "v1",
            "kind": "Service",
            "metadata": {
                "annotations": {
                    "description": "Ping service for clustered applications."
                },
                "labels": {
                    "application": "wildfly-app"
                },
                "name": "wildfly-app-ping"
            },
            "spec": {
                "portalIP": "None",
                "ports": [
                    {
                        "port": 8888,
                        "targetPort": 8888
                    }
                ],
                "selector": {
                    "deploymentConfig": "wildfly-app"
                }
            }
        },
        {
            "apiVersion": "v1",
            "kind": "ReplicationController",
            "metadata": {
                "labels": {
                    "application": "wildfly-app"
                },
                "name": "wildfly-app"
            },
            "spec": {
                "replicas": 2,
                "selector": {
                    "deploymentConfig": "wildfly-app"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "application": "wildfly-app",
                            "deploymentConfig": "wildfly-app"
                        },
                        "name": "wildfly-app"
                    },
                    "spec": {
                        "containers": [
                            {
                                "env": [
                                    {
                                        "name": "OPENSHIFT_MASTER_HOST",
                                        "value": "10.245.2.2"
                                    },
                                    {
                                        "name": "OPENSHIFT_MASTER_PORT",
                                        "value": "8443"
                                    },
                                    {
                                        "name": "KUBERNETES_CLIENT_CERTIFICATE_FILE",
                                        "value": "/vagrant/openshift.local.certificates/kube-client/cert.crt"
                                    },
                                    {
                                        "name": "KUBERNETES_CLIENT_KEY_FILE",
                                        "value": "/vagrant/openshift.local.certificates/kube-client/key.key"
                                    },
                                    {
                                        "name": "KUBERNETES_CLIENT_KEY_PASSWORD",
                                        "value": ""
                                    },
                                    {
                                        "name": "KUBERNETES_CLIENT_KEY_ALGO",
                                        "value": "RSA"
                                    },
                                    {
                                        "name": "KUBERNETES_CA_CERTIFICATE_FILE",
                                        "value": "/vagrant/openshift.local.certificates/kube-client/root.crt"
                                    }
                                ],
                                "image": "10.245.2.2:5000/dward/wildfly-openshift-examples:latest",
                                "imagePullPolicy": "Always",
                                "name": "wildfly-app",
                                "ports": [
                                    {
                                        "containerPort": 8080,
                                        "name": "wildfly-app-tcp-8080",
                                        "protocol": "TCP"
                                    },
                                    {
                                        "containerPort": 8888,
                                        "name": "wildfly-app-ping-8888",
                                        "protocol": "TCP"
                                    }
                                ],
                                "privileged": true,
                                "volumeMounts": [
                                    {
                                        "mountPath": "/vagrant/openshift.local.certificates/kube-client",
                                        "name": "kube-client-dir",
                                        "readOnly": true
                                    }
                                ]
                            }
                        ],
                        "volumes": [
                            {
                                "name": "kube-client-dir",
                                "source": {
                                    "hostDir": {
                                        "path": "/vagrant/openshift.local.certificates/kube-client"
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        }
    ]
}
